{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "jsx": "react",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    // "noEmitOnError": true,
    "allowJs": true,
    "baseUrl": ".",

    "rootDir": "src",
    "outDir": "lib",
    "declaration": true,
    "declarationMap": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true,
    "sourceMap": true
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "build", "lib", "src/stories", "src/**/*.test.tsx", "src/mocks/**"]
}
