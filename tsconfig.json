{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true
  },

  "include": ["src/**/*", "./scripts"],
  "exclude": ["node_modules", "build", "lib", "src/storiestsx", "src/**/*.test.tsx", "src/mocks/**"]
}
