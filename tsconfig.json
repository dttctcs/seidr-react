{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2015",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "outDir": "dist",
    "declaration": true,
    "declarationDir": "types",
    "emitDeclarationOnly": true
  },

  "include": ["src/**/*", "./scripts"],
  "exclude": ["node_modules", "build", "lib", "src/storiestsx", "src/**/*.test.tsx", "src/mocks/**"]
}
